            <i class="fa fa-plus"></i>
            New Record
        </a>
    </div>
</div>
<div class="clearfix"></div>
<div class="x_panel">
    <div class="x_content">
        <div class="row">
            <div class="col-md-12 pull-right">
                <div class="row">
                    <div class="col-md-2 col-sm-5 col-xs-12 form-group fa-pull-left">
                        <div class="form-group has-search">
                            <span class="fa fa-search form-control-feedback"></span>
                            <input id="txtKeyword" type="text" class="form-control" placeholder="Search">
                        </div>
                    </div>
                    <div class="col-md-2 col-sm-12  form-group pull-right">
                        <select class="form-control" asp-items="@(new SelectList(ViewBag.NailCategory,"Id","Name"))" id="slSearchType">
                            <option value="0">--Select--</option>
                        </select>
                    </div>
                    <div class="col-md-2 col-sm-12  form-group pull-right">
                        <select class="form-control" asp-items="@(new SelectList(ViewBag.NailStore,"Id","Name"))" id="slStore">
                            <option value="0">--Select Store--</option>
                        </select>
                    </div>
                    <div class="col-md-2 col-sm-12 form-group">
                        <button class="btn btn-primary" id="btnSearch" type="button">Search</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Store</th>
                            <th>Created date</th>
                            <th width="20%">Action</th>
                        </tr>
                    </thead>
                    <tbody id="tbl-content"></tbody>
                </table>
                <!--Pagination-->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate">
                            <ul id="paginationUL"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td>{{{Image}}}</td>
        <td>{{Name}}</td>
        <td>{{Category}}</td>
        <td>{{StoreName}}</td>
        <td>{{CreatedDate}}</td>
        @*<td>{{{Status}}}</td>*@
        <th scope="row">
            <a class="btn btn-clean btn-icon btn-sm  btn-edit" href="/admin/nailservice/edit/{{Id}}"><i class="far fa-edit"></i></a>
            <a class="btn btn-clean btn-icon btn-sm  btn-delete" data-id="{{Id}}"><i class="far fa-trash-alt"></i></a>
            @*<a class="btn btn-clean btn-icon btn-sm  btn-copy" data-name="{{Name}}" data-id="{{Id}}"><i class="fas fa-copy"></i></a>*@
        </th>
    </tr>
</script>

