@model NailCustomerViewModel
@{
    ViewData["Title"] = "SignIn";
}
<section class="main sign-up">
    <div class="container">
        <h2 class="title">Sign Up:</h2>
        <div class="box_signup">
            @*<div class="back_signupdeal">
                    <div class="bg_banner">
                        <div class="banner_signup">
                            <img src="./images/signup/1.png" alt="deal">
                        </div>
                        <div class="title_signup">NEW CLIENT SPECIAL! SIGN UP & ENJOY $5.00 GIFT VOUCHER</div>
                    </div>
                    <div class="box_restrictions">
                        Restrictions: <span class="restrictions">Cannot combine with any offer</span>
                    </div>
                    <div class="row_title_top">
                        One time use only. Must show valid ID with your name at front desk.
                    </div>
                    <div class="box_serial">
                        Serial Number: XXXXXX
                    </div>
                </div>*@
            <!--Sign In form Begin-->
            <div class="signdeal">
                <div id="formsigndeal" class="formsigndeal">
                    @if (ViewData["Success"] != null && (bool)ViewData["Success"] == true)
                    {

                        <div class="alert alert-success" role="alert">
                            Thank you for sending information successfully. We will contact you as soon as possible.
                        </div>
                    }
                    else
                    {
                        <form action="/sign-in" method="post">
                            @*<div asp-validation-summary="All" class="text-danger"></div>*@

                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label for="">First Name <span style="color: Red;">*</span>: </label>
                                <input type="text" class="form-control input-sm" asp-for="FirstName" />
                                <span class="text-danger" asp-validation-for="FirstName"></span>
                            </div>
                            <div class="form-group">
                                <label for="">Last Name <span style="color: Red;">*</span>: </label>
                                <input type="text" class="form-control input-sm" asp-for="LastName" />
                                <span class="text-danger" asp-validation-for="LastName"></span>
                            </div>
                            <div class="form-group">
                                <label for="">Email <span style="color: Red;">*</span>: </label>
                                <input type="text" class="form-control input-sm" asp-for="Email" />
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="form-group">
                                <label for="">Phone <span style="color: Red;">*</span>: </label>
                                <input type="text" id="txtPhone" class="form-control input-sm" asp-for="Phone" />
                                <span class="text-danger" asp-validation-for="Phone"></span>
                            </div>
                            <div class="form-group">
                                <label for="">Birthdate <span style="color: Red;">*</span>: </label>
                                <input type="text" id="dateBirthdate" placeholder="" class="form-control input-sm" asp-for="Birthdate" />
                                <span class="text-danger" asp-validation-for="Birthdate"></span>
                            </div>
                            <div class="btn-submit">
                                <button type="submit" class="btn ">Submit</button>
                            </div>

                        </form>
                    }
                </div>
            </div>
            <!--Sign In form End-->
        </div>
    </div>
</section>

@section Scripts {
    <script type="text/javascript" src="~/js/jquery.maskedinput.js"></script>
    <script>
        $("#txtPhone").mask("999-999-9999");
        $("#dateBirthdate").mask("99-99");
    </script>
}



