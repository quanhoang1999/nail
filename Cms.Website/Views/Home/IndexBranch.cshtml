    <section class="home-collection-banners">
        <div class="container">
            <div class="row">
                @await Component.InvokeAsync("Gallery")
            </div>
        </div>
    </section>

    <section class="home-news blog-content">
        <div class="container blog-single-item">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12 home-section-title">
                    <h3 class="title-type">News</h3>
                    <h2>Beauty corner</h2>
                    <div class="line-bottom-title">
                        <span class="line-left"></span>
                        <img src="~/frontend/images/icon/icon-title.png" />
                        <span class="line-right"></span>
                    </div>
                </div>
            </div>
            <div class="row blog-single-slider">
                <div id="home-news-slider">
                    @foreach (var item in Model)
                    {
                        var url = "/" + item.SeoAlias + "-" + item.Id + "-" + Context.Request.RouteValues["id"];
                        <div class="item">
                            <div class="article-item">
                                <a href="@url" class="article-img">
                                    <img src="@item.FullImageUrl" alt="@item.Name">
                                </a>
                                <a href="@url" class="article-title">@item.Name</a>
                                <div class="article-desc">
                                    @item.Description
                                </div>
                                <div class="article-info">
                                    <div class="article-date">
                                        <div class="time">@Convert.ToDateTime(item.DateCreated).Day</div>
                                        <div>
                                            <span>@Convert.ToDateTime(item.DateCreated).ToString("MMM")</span>
                                            <span>@Convert.ToDateTime(item.DateCreated).Year</span>
                                        </div>
                                    </div>
                                    <div class="article-cmt">
                                        @*<span><i class="fa fa-user"></i> Suplo Beauty</span>*@
                                        @*<span>
                                                <i class="fa fa-commenting-o" aria-hidden="true"></i> 0 comment
                                            </span>*@
                                    </div>
                                </div>
                            </div>
                        </div>

                    }


                </div>
            </div>
        </div>
    </section>
    <section class="home-policy">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-3 item">
                    <div class="policy-item">
                        <div class="icon-policy">
                            <div class="icon">
                                <i class="fa fa-calendar"></i>
                            </div>
                        </div>
                        <div class="content-policy">
                            <div class="title-police">Book Now</div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-12 col-lg-6 item">
                    <div class="policy-item appointments text-center ">
                        <div class="content-policy ">
                            <div class="title-police">Appointments & Wall-ins Welcome</div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-12 col-lg-3 item">
                    <div class="policy-item">
                        <div class="icon-policy">
                            <div class="icon">
                                <i class="ti-gift"></i>
                            </div>
                        </div>
                        <div class="content-policy">
                            <div class="title-police">Gift Certificate</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</section>


