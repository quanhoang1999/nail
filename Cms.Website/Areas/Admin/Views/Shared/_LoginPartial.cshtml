@using Microsoft.AspNetCore.Identity
@using Cms.Data.Entities.Identity
@using Cms.Website.Extensions

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
    <img src="~/uploaded/avatar/@User.GetSpecificClaim("Avatar")" alt="">@User.GetSpecificClaim("FullName")
    
</a>
<div class="dropdown-menu dropdown-usermenu pull-right">
    <a class="dropdown-item" href="javascript:;"> Profile</a>
    <a class="dropdown-item" href="javascript:;">
        <span class="badge bg-red pull-right">50%</span>
        <span>Settings</span>
    </a>
    <a class="dropdown-item" href="javascript:;">Help</a>
    <a class="dropdown-item">
        <form action="/Admin/Account/Logout" method="post" id="logoutForm">
            <button type="submit"> <i class="fa fa-sign-out pull-right"></i> Log Out</button>
        </form>

    </a>


</div>

