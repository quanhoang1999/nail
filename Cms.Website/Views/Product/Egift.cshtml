                </ul>
            </div>
        </div>
    </div>
</div>

<script id="table-template-egiftcard" type="x-tmpl-mustache">
    <li>
        <div class="frame_img">
            <img src="{{urlimg}}"
                 alt="Giftcards " title="Giftcards ">
        </div>
        <div class="qty_product center">
            <p>{{Quantity}}</p>
        </div>
        <div class="price order_price">
            <p>{{Price}}</p>
        </div>
        <div class="btn action">
            <a href="javascript:;" data-id="{{Id}}" class="icon-del">
                <i class="ti-trash"></i>
            </a>
        </div>
    </li>
</script>

@section Scripts {

    <script src="@Url.Content("~/frontend/vender/slick/slick/slick.js")"></script>
    <script src="@Url.Content("~/frontend/vender/air-datepicker-master//air-datepicker-master//dist/js/datepicker.min.js")"></script>
    <script src="@Url.Content("~/frontend/vender/air-datepicker-master//air-datepicker-master//dist/js/i18n/datepicker.en.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/frontend/js/jquery.maskedinput.js")"></script>

    <script src="@Url.Content("~/frontend/js/controller/egift.js")" asp-append-version="true"></script>
    <script>
        var egiftObj = new EgiftController();
        egiftObj.initialize();
    </script>

}
