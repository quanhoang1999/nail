@model FeedbackViewModel
@{
    ViewData["Title"] = "Feedback management";
}
@section Styles{
    <link href="~/lib/jQuery-EasyUI/themes/bootstrap/easyui.css" rel="stylesheet" />
    <link href="~/lib/jQuery-EasyUI/themes/icon.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-tagsinput/bootstrap-tagsinput.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/lib/bootstrap-tagsinput/bootstrap-tagsinput.js"></script>
    <script src="~/lib/jQuery-EasyUI/jquery.easyui.min.js"></script>

    <environment names="Development">
        <script src="~/app/controllers/feedback/detail.js" asp-append-version="true"></script>
        <script>
            var feedback = "@Model.Id";
            var feedback = new FeedbackEditController();
            feedback.initialize();
        </script>
    </environment>
    <environment names="Staging,Production">
        <script>
            var feedback = new FeedbackEditController();
            feedback.initialize();</script>
    </environment>
}

<input type="hidden" id="hid-category-id" value="0" />
<div class="">
    <div class="row">
        <div class="col-md-6">
            <h3>
                Feedback management
                <small>
                    <i class="fa fa-arrow-circle-left"></i>
                    <a href="/Admin/feedback">Back</a>
                </small>
            </h3>

        </div>
        <div class="col-md-6 text-right">



        </div>
    </div>


    <div class="clearfix"></div>
    <div class="x_panel">
        <div class="x_content">
            <div class="row">
                <div class="col-lg-6">
                    <form class="form-horizontal" role="form" id="frmMaintainance">
                        <div class="form-group row">
                            <input type="hidden" id="hidIdM" asp-for="Id" />
                            <label for="txtNameM" class="col-sm-2 control-label no-padding-right">Name</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtNameM" asp-for="Name" class="form-control" id="txtNameM">
                            </div>
                        </div>



                        <div class="form-group row">
                            <label for="txtContentM" class="col-sm-2 control-label no-padding-right">Message</label>
                            <div class="col-sm-10">
                                <textarea id="txtContent" asp-for="Message" rows="6" class="form-control"></textarea>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-2"></div>
                            <div class="col-sm-10">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" checked="checked" id="ckStatusM">
                                        <span class="text">Active.</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-2"></div>
                            <div class="col-sm-10">
                                <button type="button" id="btnSave" class="btn btn-primary">Save changes</button>
                                <button type="button" id="btnCancel" data-dismiss="modal" class="btn btn-secondary">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


</div>

