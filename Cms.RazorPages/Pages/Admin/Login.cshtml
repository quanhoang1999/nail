            <p id="profile-name" class="profile-name-card"></p>
            <form class="form-signin" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <span id="reauth-email" class="reauth-email"></span>
                <input type="text" asp-for="LoginViewModel.UserName" class="form-control" placeholder="Tài khoản" required autofocus>
                <span asp-validation-for="LoginViewModel.UserName" class="text-danger"></span>
                <input type="password" asp-for="LoginViewModel.Password" class="form-control" placeholder="Mật khẩu" required>
                <span asp-validation-for="LoginViewModel.Password" class="text-danger"></span>
                <div id="remember" class="checkbox">
                    <label>
                        <input type="checkbox" value="remember-me"> Remember me
                    </label>
                </div>
                <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Đăng nhập</button>
            </form><!-- /form -->
            <a href="#" class="forgot-password">
                Forgot the password?
            </a>
        </div><!-- /card-container -->
    </div><!-- /container -->


